def funcionMenuHist():
    import time
    menuHist = int(input(""))
    if menuHist == 1:
        cinematicaUno()
        tiempoInicial = time.time() #Arranca el cronometro
    else:
        menuPrincipal()
        menu = int(input(""))
        if menu == 1:
            menuHistoria()
        else:
            pass

