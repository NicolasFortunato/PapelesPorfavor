def seleccionCinematicaUno():
    cinematUno = int(input(""))
    if cinematUno == 1:
        cinematicaDos()
    else:
        menuPrincipal()
        cronometro()
        menu = int(input(""))
        if menu == 1:
            menuHistoria()
        else:
            pass


