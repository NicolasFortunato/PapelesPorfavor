def main():
    menuPrincipal()
    funcionSeleccionar()
    funcionMenuHist()
    seleccionCinematicaUno()
    cronometro()
    estadisticas()

def cronometro(tiempoInicial):
    import time
    timepoFinal = time.time() #Se detiene el cronometro
    tiempoTotal = timepoFinal - tiempoInicial 
    print("Tiempo de juego: {tiempoTotal:.2f} segundos") #.2f se refiere a que hayan 2 digitos despues de la coma
    tiempoRecord = None
    if recordTime is None or recordTime < recordTime:
        recordTime = tiempoTotal
        print("!Hay un nuevo record, y ese es: ",recordTime,"!")

def estadisticas(tiempoRecord, iDeportados, iAceptados, diasJugados):
    print("ESTADISTICAS\n")
    print("Mayor timepo de juego: ",tiempoRecord)
    print("Inmigrantes deportados: ",iDeportados)
    print("Inmigrantes aceptados: ",iAceptados)
    print("Dias alcanzados: ",diasJugados)
    print("1. Salir")
    """Capaz conviene returnear y ya esta"""
    eleccionEstadisticas = int(input("Seleccione una opcion: "))
    if eleccionEstadisticas == 1:
        return 
    
#Cont de cuantos inmigrantes fueron aceptados o deportados para la parte de ESTADISTICAS
def cont_Inmigrantes_Decision(decisionInmigrante):
    if decisionInmigrante == 1:
        iAceptados = iAceptados +1
    else:
        iDeportados = iDeportados +1

    #Cont de cuantos dias se han jugado para la parte de ESTADISTICAS
def dias_Jugados(decisionInmigrante):
    for i in range:
        diasJugados = 0
        contInmigrantes = 0
        if decisionInmigrante == 1 or decisionInmigrante == 2:
            contInmigrantes = contInmigrantes +1
            if contInmigrantes == 8:
                print("Dia finalizado")
                diasJugados = diasJugados +1
            return
main()
